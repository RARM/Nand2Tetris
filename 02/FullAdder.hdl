/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    Xor(a=a, b=b, out=x);
    And(a=a, b=b, out=y);
    And(a=x, b=c, out=z);

    Xor(a=x, b=c, out=sum);
    Or(a=z, b=y, out=carry);
}
